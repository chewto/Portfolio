---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Jesus Lozada frontend developer portfolio" />
		<meta name="keywords" content="Jesus Lozada, jesus, lozada, frontend, front, end, developer, react, react.js, React.js, React, redux, toolkit, typescript, javscript, software, engineer">
		<meta name="author" content="Jesus Lozada">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	*{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);

		--primary-letter-color: #fff;
		--secondary-letter-color: #aaa;
		--white: #fff;
	}
	html {
		font-family: system-ui, sans-serif;
		background: rgb(9,7,50);
background: linear-gradient(90deg, rgba(9,7,50,1) 0%, rgba(7,7,17,1) 51%, rgba(31,22,55,1) 100%);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
