  </section>
  
  <section id="skills">
    <h3 class="section-title">Skills</h3>
    <article id="wrap-container">
      <Skill/>
    </article>
  </section>

</main>

<style>

  .section-title{
    color: var(--white);
    margin: 25px 0;
    text-align: center;
  }

  #about-container{
    color: var(--white);
    padding: 0 20px;
  }

  #about-container > p{
    letter-spacing: 1px;
  }

  #wrap-container{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .article-container{
    display: flex;
    align-items: center;
    flex-direction: column;
  }

</style>