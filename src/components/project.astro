---
import { projectsData } from "../data/projects-data";
---

{projectsData.map((data) => (
  <div class="project-container">
    <img src={data.image} alt={data.title} />
    <div class="info-container"> 
      <h3>{data.title}</h3>
      <h4>{data.technologies}</h4>
      <p>{data.description}</p>
      <div class="link-container">
        <a href={data.repoUrl} target="_BLANK" class="github-button">Github repo</a>
        <a href={data.url} target="_BLANK" class="project-button">Project link</a>
      </div>
    </div>
  </div>
))}

<style>
  .project-container{
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    width: fit-content;
    border: 2px solid var(--white);
    border-radius: 10px;
    padding: 20px 20px;
    color: var(--white);
  }

  .info-container > h3{
    font-size: 23px;
  }

  .link-container{
    display: flex;
    gap: 10px;
    margin: 20px 0 0 0;
  }

  .project-button{
    color: #000;
    background: var(--white);
    padding: 8px;
    border: 4px solid var(--white);
    border-radius: 5px;
    filter: opacity(85%);
    cursor: pointer;
    transition: 450ms all;
    text-decoration: none;
  }

  .project-button:hover{
    filter: brightness(1);
  }

  .github-button{
    color: var(--white);
    background: #000;
    padding: 8px;
    border: 4px solid var(--white);
    border-radius: 5px;
    filter: opacity(85%);
    cursor: pointer;
    transition: 450ms all;
    text-decoration: none;
  }

  .github-button:hover{
    filter: brightness(1);
  }
  @media screen and (max-width: 435px) {
		.project-container{
      justify-content: center;
    }
	}
</style>
